{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "quotes": [
            "error",
            "single",
            {
              "allowTemplateLiterals": true
            }
          ],
          "semi": [
            "error",
            "always"
          ],
          "no-unused-vars": [
            "error",
            {
              "vars": "all",
              "args": "after-used",
              "ignoreRestSiblings": false
            }
          ]
    }
}
